<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <Nullable>enable</Nullable>
        <AssemblyName>ken</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="kentxxq.Extensions" Version="2.0.2" />
        <PackageReference Include="kentxxq.Utils" Version="2.0.3" />
        <PackageReference Include="KubernetesClient" Version="8.0.6" />
        <PackageReference Include="Masuit.Tools.Core" Version="2.4.8.10" />
        <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="6.0.5" />
        <PackageReference Include="Spectre.Console" Version="0.44.0" />
        <PackageReference Include="StackExchange.Redis" Version="2.5.61" />
        <PackageReference Include="System.CommandLine" Version="2.0.0-beta3.22114.1" />
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Properties\PublishProfiles\" />
    </ItemGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

    <PropertyGroup>
        <!-- https://docs.microsoft.com/zh-cn/dotnet/core/project-sdk/msbuild-props#generateassemblyinfo -->
        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
        <InformationalVersion>1.1.1</InformationalVersion>
    </PropertyGroup>

</Project>
