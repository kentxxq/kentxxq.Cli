<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <AssemblyName>ken</AssemblyName>

		<!--<PublishAot>true</PublishAot>
		<IsTrimmable>true</IsTrimmable>-->
		
        <!-- 压缩一下大小，感觉使用的时候，差距不明显。。 -->
        <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="kentxxq.Extensions" Version="2.0.3" />
        <PackageReference Include="KubernetesClient" Version="11.0.9" />
        <PackageReference Include="Masuit.Tools.Core" Version="2.6.1" />
        <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="7.0.5" />
        <PackageReference Include="Octokit" Version="5.1.0" />
        <PackageReference Include="Spectre.Console" Version="0.46.0" />
        <PackageReference Include="StackExchange.Redis" Version="2.6.111" />
        <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
        <PackageReference Include="ThisAssembly" Version="1.2.15">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Properties\PublishProfiles\" />
    </ItemGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

    <PropertyGroup>
        <!-- https://docs.microsoft.com/zh-cn/dotnet/core/project-sdk/msbuild-props#generateassemblyinfo -->
        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
        <InformationalVersion>1.7.2</InformationalVersion>
    </PropertyGroup>

</Project>
